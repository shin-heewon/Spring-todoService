<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssg.springtodoservice.mapper.TodoMapper"><!-- namespace란 객체의 영역(스코프)를 의미한다.-->
    <select id="getTime" resultType="string"> <!--id 값과 TodoMapper.java에 선언해놓은 메소드 명이 같아야됨!!, resultType =반환 타입 -->
        select now()
    </select>

    <insert id="insert">
        insert into tbl_todo (title, dueDate, writer) values (#{title},#{dueDate},#{writer})
    </insert>
    <select id="selectAll" resultType="com.ssg.springtodoservice.domain.TodoVO">
        select * from tbl_todo order by tno desc
    </select>

    <select id="selectOne" resultType="com.ssg.springtodoservice.domain.TodoVO">
        select * from tbl_todo where tno = #{tno}
    </select>

    <delete id="delete">
        delete from tbl_todo where tno = #{tno}
    </delete>

    <update id="update">
        update tbl_todo set title=#{title}, dueDate=#{dueDate}, finished=#{finished} where tno=#{tno}
    </update>
    <select id="selectList" resultType="com.ssg.springtodoservice.domain.TodoVO">
        select * from tbl_todo
                 <foreach collection="types" item="type">
                     #{type}
                 </foreach>
                 order by tno desc limit #{skip}, #{size}
    </select>
    <select id="getCount" resultType="int">
        select count(tno) from tbl_todo
    </select>

</mapper>


